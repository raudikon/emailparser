# Server Configuration
PORT=3001

# Database (Supabase)
DATABASE_URL=postgresql://postgres:[PASSWORD]@[HOST]:5432/postgres
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Claude AI (for caption generation)
CLAUDE_API_KEY=sk-ant-your-key-here
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Cron Job Configuration (Option 1: External Cron - Recommended)
CRON_SECRET=generate-a-strong-random-token-here

# Cron Job Configuration (Option 2: Internal node-cron - Optional)
ENABLE_NODE_CRON=false
DAILY_CRON=0 17 * * *
CRON_TIMEZONE=America/New_York
